{
  "env": {
    "jest": true
  },
  "extends": "airbnb-base",
  "rules": {
    "semi": [2, "never"],
    "no-unexpected-multiline": 2,
    "indent": ["error", 4],
    "max-len": ["error", 100],
    "quotes": ["error", "single"],
    "camelcase": 2,
    "vars-on-top": 2,
    "strict": 2,
    "max-statements": ["error", 50]
  }
}
