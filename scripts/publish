#!/bin/bash

set -e

function usage() {
    echo -n "Usage: $(basename "${0}") [OPTION]
Publish project in development to AWS Lambda
Options:
    --new     Deploy as a new lambda
    --help      Display this help text
"
}

function main() {
    if [ "${1}" = "--new" ]
    then
        docker-compose run --rm --no-deps -e NODE_ENV=production tiler yarn deploy-new
    else
        docker-compose run --rm --no-deps -e NODE_ENV=production tiler yarn deploy
    fi

    # Deploy CloudFront proxy
    docker-compose run terraform init
    docker-compose run --rm -e TF_VAR_source_id=$(<src/tiler/.api-id) \
        terraform apply -auto-approve && \
        echo "Success! Your tiles will be available at the above URL shortly."
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]
then
    if [ "${1:-}" = "--help" ]
    then
        usage
    else
        SERVER_COMMAND=${1:-start}
        main $SERVER_COMMAND
    fi
    exit
fi
